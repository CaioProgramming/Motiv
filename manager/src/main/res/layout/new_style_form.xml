<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/styleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/styleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/dividerColor"
        android:scaleType="centerCrop"
        tools:background="@drawable/motiv_gradient" />

    <LinearLayout
        android:id="@+id/style_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small_8dp"
        app:layout_constraintTop_toBottomOf="@id/motiv_top">

        <ImageButton
            android:id="@+id/styleWallpaper"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?android:colorBackground"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_gif_24"
            app:tint="?android:textColorPrimary" />

        <ImageButton
            android:id="@+id/styleAlign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?android:colorBackground"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/padding_small_8dp"
            android:src="@drawable/ic_baseline_format_align_center_24"
            app:tint="?android:textColorPrimary" />

        <ImageButton
            android:id="@+id/fontButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?android:colorBackground"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/padding_small_8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_iconmonstr_text_1"
            app:tint="?android:textColorPrimary" />

        <ImageButton
            android:id="@+id/fontStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?android:colorBackground"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/padding_small_8dp"
            android:src="@drawable/ic_baseline_format_clear_24"
            app:tint="?android:textColorPrimary" />


    </LinearLayout>

    <TextView
        android:id="@+id/styleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/styleAuthor"
        app:layout_constraintTop_toBottomOf="@id/style_buttons"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/styleAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_default_10dp"
        android:gravity="center"
        android:text="Ilustris"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/material_grey300"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/style_buttons" />

    <RelativeLayout
        android:id="@+id/motiv_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?android:colorBackground"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:theme="@style/AppToolbar"
            app:title=" " />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_default_16dp"
                android:stateListAnimator="@animator/scale_down_animator"
                android:text="@string/cancel_button"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_style_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_default_16dp"
                android:elevation="0dp"
                android:text="Salvar"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="@dimen/radius_big_20dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/editloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="?android:textColorPrimary"
                app:indicatorDirectionCircular="clockwise"
                app:layout_constraintBottom_toBottomOf="@id/save_style_button"
                app:layout_constraintEnd_toEndOf="@id/save_style_button"
                app:layout_constraintStart_toStartOf="@id/save_style_button"
                app:layout_constraintTop_toTopOf="@id/save_style_button"
                app:trackThickness="1dp"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/style_bottom_nav"
        app:layout_constraintTop_toTopOf="@id/style_bottom"
        app:realtimeBlurRadius="@dimen/radius_small_5dp"
        app:realtimeOverlayColor="?attr/blurOverLayColor" />

    <LinearLayout
        android:id="@+id/style_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/style_bottom_nav">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:valueFrom="0"
            android:valueTo="10"
            android:visibility="invisible"
            app:haloColor="?android:textColorPrimary"
            app:haloRadius="@dimen/radius_default_10dp"
            app:layout_constraintBottom_toTopOf="@id/style_bottom_nav"
            app:thumbColor="@color/colorPrimaryDark"
            app:thumbElevation="0dp"
            app:thumbRadius="@dimen/radius_default_10dp"
            app:tickColor="?android:textColorPrimary"
            app:tickColorInactive="?android:textColorHint"
            app:tickVisible="false"
            app:trackColorActive="@color/colorPrimaryDark"
            app:trackColorInactive="?android:textColorHint"
            app:trackHeight="@dimen/radius_default_10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/style_recycler_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/color_card" />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/style_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/new_style_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>
