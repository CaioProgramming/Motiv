<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/styleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/styleBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/dividerColor"
        android:scaleType="centerCrop"
        tools:background="@drawable/motiv_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_default_16dp">

        <TextView
            android:id="@+id/styleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/styleAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_default_10dp"
            android:gravity="center"
            android:text="Ilustris"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/material_grey300"
            android:textStyle="italic" />
    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:background="@drawable/bottom_line"
        android:backgroundTint="?attr/dividerColor"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/motiv_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:theme="@style/AppToolbar"
                app:title=" " />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_default_16dp"
                    android:stateListAnimator="@animator/scale_down_animator"
                    android:text="@string/cancel_button"
                    android:textColor="?android:textColorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_style_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_default_16dp"
                    android:elevation="0dp"
                    android:enabled="false"
                    android:text="Salvar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:cornerRadius="@dimen/radius_big_20dp"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/editloading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="?android:textColorPrimary"
                    app:indicatorDirectionCircular="clockwise"
                    app:layout_constraintBottom_toBottomOf="@id/save_quote_button"
                    app:layout_constraintEnd_toEndOf="@id/save_quote_button"
                    app:layout_constraintStart_toStartOf="@id/save_quote_button"
                    app:layout_constraintTop_toTopOf="@id/save_quote_button"
                    app:trackThickness="1dp"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        app:behavior_peekHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/stylesSettings"
            app:layout_constraintTop_toTopOf="@id/stylesSettings"
            app:realtimeBlurRadius="@dimen/radius_default_10dp" />

        <LinearLayout
            android:id="@+id/stylesSettings"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/blurOverLayColor"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_default_16dp">

            <include
                android:id="@+id/dotslayout"
                layout="@layout/motiv_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_small_4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ajustes de estilo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_small_8dp">

                    <ImageButton
                        android:id="@+id/styleWallpaper"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_default_10dp"
                        android:background="@drawable/round_circle"
                        android:backgroundTint="?attr/dividerColor"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/ic_baseline_gif_24"
                        app:tint="?android:textColorPrimary" />

                    <ImageButton
                        android:id="@+id/styleAlign"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_default_10dp"
                        android:background="@drawable/round_circle"
                        android:backgroundTint="?attr/dividerColor"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/padding_small_8dp"
                        android:src="@drawable/ic_baseline_format_align_center_24"
                        app:tint="?android:textColorPrimary" />

                    <ImageButton
                        android:id="@+id/fontStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_default_10dp"
                        android:background="@drawable/round_circle"
                        android:backgroundTint="?attr/dividerColor"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/padding_small_8dp"
                        android:src="@drawable/ic_baseline_format_clear_24"
                        app:tint="?android:textColorPrimary" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small_8dp"
                    android:text="Fontes"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fontsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:stateListAnimator="@animator/scale_down_animator"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"
                    tools:itemCount="18"
                    tools:listitem="@layout/tab_font_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small_8dp"
                    android:text="Cor do texto"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stylecolorGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:stateListAnimator="@animator/scale_down_animator"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"
                    tools:itemCount="10"
                    tools:listitem="@layout/color_card" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/padding_small_8dp"
                android:text="Outros estilos"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <include
                android:id="@+id/style_preview_layout"
                layout="@layout/styles_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
