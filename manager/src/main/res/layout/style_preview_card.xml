<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/styleCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_default"
        android:foreground="?attr/selectableItemBackground"
        android:checkable="true"
        android:stateListAnimator="@animator/selected_animator"
        app:cardBackgroundColor="?attr/dividerColor"
        app:cardCornerRadius="@dimen/radius_small"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/styleImage"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/styleText"
            android:gravity="center"
            android:textAlignment="center"
            android:transitionName="@string/style_text_transtition"
            android:text="Motiv"
            android:textSize="@dimen/min_quote_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.card.MaterialCardView>

</layout>