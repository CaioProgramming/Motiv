<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/styleCard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="1dp"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@animator/list_animator"
        android:checkable="true"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/selected_style"
        app:cardBackgroundColor="?attr/dividerColor"
        app:strokeWidth="1dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/styleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/styleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Motiv"
            android:textAlignment="center"
            android:transitionName="@string/style_text_transtition" />
    </com.google.android.material.card.MaterialCardView>

</layout>