<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/dropShadowColor" />
            <corners android:radius="@dimen/radius_default_10dp" />
            <stroke android:width="1dp" android:color="?android:textColorHint" />
            <padding android:bottom="@dimen/padding_default_16dp" android:left="@dimen/padding_default_16dp" android:right="@dimen/padding_default_16dp" android:top="@dimen/padding_default_16dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_default_10dp" />
            <solid android:color="?android:textColorPrimary" />
            <padding android:bottom="@dimen/padding_default_16dp" android:left="@dimen/padding_default_16dp" android:right="@dimen/padding_default_16dp" android:top="@dimen/padding_default_16dp" />
        </shape>
    </item>

</selector>