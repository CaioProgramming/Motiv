<?xml version="1.0" encoding="utf-8"?>


<!-- TODO: Update blank fragment layout -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stateListAnimator="@animator/list_animator">


        <RelativeLayout
            android:id="@+id/userContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/fade_gradient"
            android:paddingHorizontal="@dimen/default_padding"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/userTop"
                layout="@layout/user_quote_card_view"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/quote_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/saveLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userContainer">

            <EditText
                android:id="@+id/quoteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/author_text_view"
                android:autoSizeMaxTextSize="@dimen/big_quote_size"
                android:autoSizeMinTextSize="@dimen/min_quote_size"
                android:autoSizeTextType="uniform"
                android:background="@color/transparent"
                android:breakStrategy="high_quality"
                android:hint="@string/quote"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:padding="@dimen/default_padding"
                android:textSize="@dimen/default_quote_size"
                android:textStyle="bold"
                android:typeface="normal"
                tools:text="Change is a powerful thing, I feel it coming to me." />

        </ScrollView>

        <EditText
            android:id="@+id/author_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="@dimen/big_quote_size"
            android:autoSizeMinTextSize="@dimen/min_quote_size"
            android:autoSizeTextType="uniform"
            android:backgroundTint="@color/transparent"
            android:hint="@string/author"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="@dimen/default_padding"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/saveLayout"
            tools:textColor="@color/white" />


        <ScrollView
            android:id="@+id/saveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lblack"
            android:paddingBottom="@dimen/default_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/colorlibrary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_padding"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:spanCount="1"
                    tools:listitem="@layout/color_card" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_quote_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quoteEditButtons"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@drawable/round"
                    android:padding="8dp"
                    android:text="@string/save_quote_button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@id/quoteEditButtons" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/editloading"
                    style="@style/AppProgressIndicator"
                    android:layout_below="@id/quoteEditButtons"
                    android:layout_alignBaseline="@id/save_quote_button"
                    android:elevation="4dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone"
                    app:indicatorColor="@color/colorPrimaryDark"
                    app:layout_constraintBottom_toBottomOf="@id/save_quote_button"
                    app:layout_constraintEnd_toEndOf="@id/save_quote_button"
                    app:layout_constraintStart_toStartOf="@id/save_quote_button"
                    app:layout_constraintTop_toTopOf="@id/save_quote_button"
                    app:trackColor="@color/white"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/fontView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_padding"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/colorlibrary">

                    <TextView
                        android:id="@+id/currentFont"
                        style="@style/TextAppearance.MaterialComponents.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/default_padding"
                        android:text="Fonte selecionada" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/fontTabs"
                        style="@style/ToolbarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        app:tabBackground="@color/transparent"
                        app:tabGravity="start"
                        app:tabIndicator="@color/transparent"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="@color/colorPrimaryDark"
                        app:tabTextAppearance="@style/TabsTitle"
                        app:tabTextColor="?android:textColorHint" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quoteEditButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fontView"
                    android:layout_margin="@dimen/default_padding"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fontView">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_outline"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/textcolorfab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/round"
                            android:contentDescription="Alterar cor do texto"
                            android:padding="8dp"
                            android:src="@drawable/ic_format_color_text_black_24dp"
                            android:tint="?android:textColorPrimary"
                            tools:backgroundTint="@color/material_red500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_padding"
                        android:background="@drawable/round_outline"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/backcolorfab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="@drawable/round"
                            android:backgroundTint="?android:colorBackground"
                            android:contentDescription="Alterar plano de fundo"
                            android:padding="8dp"
                            android:src="@drawable/ic_paint_bucket"
                            android:tint="?android:textColorPrimary" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
