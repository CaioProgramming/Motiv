<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="advertise"
            type="com.google.android.gms.ads.formats.UnifiedNativeAd" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/adCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="?android:textColorPrimary"
        app:cardCornerRadius="@dimen/default_radius"
        app:cardElevation="0dp"
        tools:visibility="visible">

        <com.google.android.gms.ads.formats.UnifiedNativeAdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/adIconCard"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="@dimen/default_radius">

                            <ImageView
                                android:id="@+id/adAppIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:importantForAccessibility="no"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_image" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/adHeadline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{advertise.headline}"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                                android:textColor="?android:colorBackground"
                                android:textStyle="bold"
                                tools:text="Ad Title" />

                            <TextView
                                android:id="@+id/adAdvertiser"
                                style="@style/TextAppearance.MaterialComponents.Caption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{advertise.advertiser}"
                                android:textColor="?android:colorBackground"
                                tools:text="Advertiser" />

                            <com.google.android.gms.ads.formats.AdChoicesView
                                android:id="@+id/adChoices"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.5"
                                    android:drawablePadding="8dp"
                                    android:fontFamily="@font/lato_light"
                                    android:text="Patrocinado"
                                    android:textColor="?android:colorBackground"
                                    android:textSize="10sp"
                                    app:drawableEndCompat="@drawable/ic_adchoices" />

                            </com.google.android.gms.ads.formats.AdChoicesView>


                            <RatingBar
                                android:id="@+id/appRating"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressTint="@color/material_yellow600"
                                android:rating="@{advertise.starRating.intValue()}"
                                android:stepSize="1" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/default_margin"
                    app:cardCornerRadius="@dimen/default_radius">

                    <ImageView
                        android:id="@+id/adAppImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Imagem do anunciante"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/adBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:padding="4dp"
                    android:text="@{advertise.body}"
                    android:textColor="?android:colorBackground"
                    tools:text="Ad body here" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/adActionButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/default_margin"
                    android:stateListAnimator="@animator/list_animator"
                    android:text="Acessar"
                    android:textColor="?android:colorBackground"
                    app:cornerRadius="@dimen/default_radius"
                    app:strokeColor="?android:colorBackground"
                    app:strokeWidth="2dp" />

            </LinearLayout>
        </com.google.android.gms.ads.formats.UnifiedNativeAdView>
    </com.google.android.material.card.MaterialCardView>


</layout>