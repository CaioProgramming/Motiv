<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="advertise"
            type="com.google.android.gms.ads.formats.UnifiedNativeAd" />
    </data>

    <com.google.android.gms.ads.formats.UnifiedNativeAdView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/adCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@animator/list_animator"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/default_radius"
            tools:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adAppImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@drawable/round_low"
                    android:backgroundTint="@color/material_green400"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="AnÃºncio"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/default_padding"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_adchoices"
                    android:stateListAnimator="@animator/list_animator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/adAppIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/lwhite"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{advertise.headline}"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            android:textStyle="bold"
                            tools:text="Ad Title" />

                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{advertise.advertiser}"
                            tools:text="Advertiser" />

                        <RatingBar
                            android:id="@+id/appRating"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="@color/material_yellow600"
                            android:rating="@{advertise.starRating.intValue()}"
                            android:stepSize="1" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.gms.ads.formats.UnifiedNativeAdView>


</layout>