<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/home"
    android:background="?attr/backgroundcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:animateLayoutChanges="true"
            android:elevation="0dp"
            android:background="@drawable/actionbarbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="?attr/textcolor"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <android.support.v7.widget.SearchView
                    app:iconifiedByDefault="true"
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/hintcolor"
                    app:defaultQueryHint="Busque o que seu coração quiser..."
                    app:queryBackground="@color/transparent"
                    app:submitBackground="@color/transparent" />

                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/searchoptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_author_sign"
                            android:drawableTint="@color/radioselect"
                            android:text="Autor"
                            android:textColor="@color/radioselect" />

                        <RadioButton
                            android:id="@+id/userfilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_person_black_24dp"
                            android:drawableTint="@color/radioselect"
                            android:text="Usuário"
                            android:textColor="@color/radioselect" />

                        <RadioButton
                            android:id="@+id/love"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_favorite_black_24dp"
                            android:drawableTint="@color/radioselect"
                            android:text="Amor"
                            android:textColor="@color/radioselect" />

                        <RadioButton
                            android:id="@+id/citation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_bookmark_black_15dp"
                            android:drawableTint="@color/radioselect"
                            android:text="Citação"
                            android:textColor="@color/radioselect" />

                        <RadioButton
                            android:id="@+id/motivation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_filter_vintage_black_24dp"
                            android:drawableTint="@color/radioselect"
                            android:text="Motivação"
                            android:textColor="@color/radioselect" />

                        <RadioButton
                            android:id="@+id/music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/post_button"
                            android:button="@color/transparent"
                            android:drawableStart="@drawable/ic_music_note_black_24dp"
                            android:drawableTint="@color/radioselect"
                            android:text="Música"
                            android:textColor="@color/radioselect" />


                    </RadioGroup>

                </HorizontalScrollView>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ProgressBar
            android:id="@+id/loading"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:indeterminateOnly="true" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:background="@color/transparent"
            app:cardCornerRadius="5dp">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-4979584089010597/3019321601" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/composesrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>



</RelativeLayout>