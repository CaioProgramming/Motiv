<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/home"
    android:background="?attr/backgroundcolor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:animateLayoutChanges="true"
            style="@style/AppTheme"
            android:id="@+id/toolbar"
            android:background="@drawable/actionbarbackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:title="@string/app_name">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <android.support.v7.widget.SearchView
                    app:iconifiedByDefault="true"
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="?attr/hintcolor"
                    app:defaultQueryHint="Busque o que seu coração quiser..."
                    app:queryBackground="@color/transparent"
                    app:submitBackground="@color/transparent" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/searchoptions"
                    android:visibility="gone"
                    app:tabIndicatorColor="?attr/textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorHeight="2dp"
                    app:tabPaddingBottom="-15dp"
                    app:tabMode="scrollable"
                    app:tabTextColor="?attr/hintcolor">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_author_sign" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_person_black_24dp" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_favorite2_black_24dp" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_bookmark_black_15dp" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_music_note_black_24dp" />

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_filter_vintage_black_24dp" />

                </android.support.design.widget.TabLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:background="@color/transparent"
            app:cardCornerRadius="20dp">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-4979584089010597/3019321601" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/composesrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerInParent="true"
         android:orientation="vertical"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:padding="10dp"
            android:textStyle="bold"
            android:id="@+id/offlinemssage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/grey_700"
            android:text="Tá carregando, relaxa..."
            android:textAlignment="center"
             android:textSize="24sp" />
        <ImageView
            android:padding="10dp"
            android:id="@+id/offlineimage"
            android:src="@drawable/ic_dog_monochrome"
            android:layout_width="150dp"
            android:layout_height="150dp" />


    </LinearLayout>


</RelativeLayout>