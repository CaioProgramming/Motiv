<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:animateLayoutChanges="true"
        android:background="@color/md_black"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer"
        android:layout_width="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="match_parent"
            android:layout_above="@id/playerView"
            android:layout_margin="@dimen/margin_small"
            app:cardCornerRadius="@dimen/radius_default"
            android:layout_width="match_parent"
            app:cardElevation="0dp">

            <fragment
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/main_navigation" />
        </com.google.android.material.card.MaterialCardView>


        <include
            android:id="@+id/playerView"
            layout="@layout/player_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/nav_view" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_black"
            android:layout_alignParentBottom="true"
            app:elevation="0dp"
            app:itemIconTint="@color/selected_navigation"
            app:itemRippleColor="@color/colorAccent"
            app:itemTextColor="@color/selected_navigation"
            app:itemIconSize="20dp"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/navigation_menu" />


        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/fade_gradient" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/mainmenu"
            app:title="@string/app_name" />

        <include layout="@layout/blur_layout"/>

    </RelativeLayout>


</layout>
