<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
            android:elevation="3dp"
                android:layout_width="match_parent"
                android:animateLayoutChanges="true"
                android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilepic"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end|center"
                    android:layout_margin="1dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="5dp"
                    android:src="@drawable/penguin" />

            </androidx.appcompat.widget.Toolbar>
            <androidx.viewpager.widget.ViewPager
                android:layout_above="@id/bubbleTabBar"
                android:layout_below="@id/toolbar"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        <com.fxn.BubbleTabBar
            android:layout_alignParentBottom="true"
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:colorBackground"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/tabs"
            app:bubbletab_disabled_icon_color="@color/grey_400"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="16sp"
            app:bubbletab_vertical_padding="10dp">
        </com.fxn.BubbleTabBar>
        <com.github.mmin18.widget.RealtimeBlurView
            android:alpha="0"
            android:id="@+id/rootblur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="50dp"
            app:realtimeOverlayColor="@color/transparent" />

    </RelativeLayout>
</layout>
