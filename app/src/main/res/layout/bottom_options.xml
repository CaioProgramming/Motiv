<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/topround"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">


        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_garbage"
            android:id="@+id/delete"
            style="@style/BottomOptionstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apagar post"
             android:textAllCaps="false" />

        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_edit"
            android:id="@+id/edit"
            style="@style/BottomOptionstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/colorPrimaryDark"
            android:text="Editar"
            android:textAllCaps="false" />

        <TextView
            android:drawablePadding="10dp"
            android:padding="10dp"

            android:id="@+id/share"
            android:drawableStart="@drawable/ic_share"
            style="@style/BottomOptionstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/colorPrimaryDark"
            android:text="Compartilhar"
             android:textAllCaps="false" />

        <TextView
            android:drawablePadding="10dp"
            android:padding="10dp"

            android:id="@+id/copy"
            android:drawableStart="@drawable/ic_copy"
            style="@style/BottomOptionstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/colorPrimaryDark"
            android:text="Copiar texto"
             android:textAllCaps="false" />

        <TextView
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/red_400"
            android:id="@+id/report"
            android:drawableStart="@drawable/ic_flag"
            style="@style/BottomOptionstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/colorPrimaryDark"
            android:text="Denunciar"
            android:textColor="@color/red_400" />

    </LinearLayout>


