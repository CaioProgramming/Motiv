<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="quoteData"
            type="com.creat.motiv.model.beans.Quote" />
    </data>

    <LinearLayout
        android:id="@+id/card"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:hapticFeedbackEnabled="true"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_marginEnd="32dp"
            android:id="@+id/background"
            android:stateListAnimator="@animator/list_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            app:cardBackgroundColor="@{quoteData.backgroundcolor}"
            app:cardElevation="8dp"
            app:cardCornerRadius="15dp"
            tools:backgroundTint="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/userTop"
                    layout="@layout/user_quote_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/quoteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@{quoteData.quote}"
                    android:textColor="@{quoteData.textcolor}"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    tools:textColor="@color/white"
                    tools:text="Everything I do \nI tell you all the time" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.8"
                    android:backgroundTint="@color/transparent"
                    android:padding="16dp"
                    android:text="@{quoteData.author}"
                    android:textColor="@{quoteData.textcolor}"
                    android:textSize="24sp"
                    android:typeface="normal"
                    tools:textColor="@color/white"
                    tools:text="Lana Del Rey" />

                <TextView
                    android:id="@+id/quoteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fade_gradient_inversed"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="10 de Outubro de 2019" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <include

            android:id="@+id/likeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/like_layout" />


    </LinearLayout>


</layout>


