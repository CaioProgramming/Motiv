<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradcitation"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/namelayout"
            android:elevation="2dp"
            android:background="@drawable/bottom_line"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/editname"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/username"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:backgroundTint="@color/transparent"
                    android:hint="@string/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/changename"
                    android:background="@color/transparent"
                     android:textColor="@color/colorPrimaryDark"
                    android:text="Alterar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bottom_line"
            android:id="@+id/deleteposts"
            android:elevation="2dp"
            android:padding="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:padding="5dp"
                android:drawableTint="@color/yellow_700"
                android:drawableStart="@drawable/ic_error_outline_black_24dp"
                android:background="@color/grey_100"
                 android:id="@+id/removeallposts"
                android:text="Apagar todos os posts"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bottom_line"
            android:backgroundTint="@color/red_400"
            android:id="@+id/deletecount"
            android:elevation="2dp"
            android:padding="2dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@color/grey_100"
                android:drawableStart="@drawable/ic_warning_black_24dp"
                android:drawableTint="@color/red_400"
                android:id="@+id/removeacount"
                android:text="Apagar conta"
                android:textColor="@color/red_400"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>









    </LinearLayout>

</ScrollView>