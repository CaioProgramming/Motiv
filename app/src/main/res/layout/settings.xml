<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.AlertDialogLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="10dp">

    <LinearLayout

        android:id="@+id/saving"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvando"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:background="@drawable/round"
            android:id="@+id/inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:backgroundTint="@color/lwhite"
            android:hint="@string/username"
            android:textColorHint="@color/colorPrimaryDark"
            app:counterMaxLength="10">


            <EditText
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:drawablePadding="10dp"
                android:inputType="textCapWords"
                android:labelFor="@id/inputlayout"
                android:maxLength="10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:background="@drawable/ripple_button"
            android:id="@+id/changename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alterar"
            android:textColor="@color/white" />
    </LinearLayout>


</android.support.v7.widget.AlertDialogLayout>