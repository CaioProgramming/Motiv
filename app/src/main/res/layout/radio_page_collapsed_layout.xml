<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_default_16dp"
    android:layout_marginVertical="@dimen/margin_small_4dp"
    android:fitsSystemWindows="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/nblack"
    app:cardCornerRadius="@dimen/radius_default_10dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/radioName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_default_16dp"
            android:text="Motiv"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:transitionName="@string/style_text_transtition"
            app:layout_constraintBottom_toBottomOf="@id/visualizer_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/visualizer_card"
            app:layout_constraintTop_toTopOf="@id/visualizer_card" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/playAnimation"
            android:layout_width="32dp"

            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/radioName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/radioName"
            app:lottie_colorFilter="@color/white"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/planet_spinning"
            app:lottie_repeatMode="reverse" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/visualizer_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_default_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/visualizer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/motiv_gradient" />
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
