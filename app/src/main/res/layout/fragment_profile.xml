<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/profileTop"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line"
        android:backgroundTint="?attr/dividerColor"
        android:paddingBottom="@dimen/padding_small_8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/usercover"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/dribble_gradient" />


        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top"
            android:layout_margin="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?attr/blurOverLayColor"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/optionsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/margin_default_10dp"
            android:background="@drawable/round_circle"
            android:backgroundTint="?attr/blurOverLayColor"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/username"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="?android:textColorPrimary"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/options"
            app:lottie_repeatMode="reverse"
            tools:src="@drawable/ic_menu" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/usercover"
            app:layout_anchorGravity="bottom|center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:stateListAnimator="@animator/scale_down_animator"
                app:civ_border_color="?android:colorBackground"
                app:civ_border_width="@dimen/radius_small_5dp"
                app:civ_circle_background_color="?attr/dividerColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/username"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginVertical="@dimen/margin_small_4dp"
                android:textStyle="bold"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toEndOf="@id/profilepic"
                app:layout_constraintStart_toStartOf="@id/profilepic"
                app:layout_constraintTop_toBottomOf="@id/profilepic"
                tools:text="Caio" />

            <include
                android:id="@+id/posts_count"
                layout="@layout/profile_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_default_10dp"
                app:layout_constraintStart_toStartOf="@id/profilepic"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/margin_default_10dp"
                android:background="?attr/dividerColor"
                app:layout_constraintBottom_toBottomOf="@id/posts_count"
                app:layout_constraintEnd_toStartOf="@id/likes_count"
                app:layout_constraintStart_toEndOf="@id/posts_count"
                app:layout_constraintTop_toTopOf="@id/posts_count" />

            <include
                android:id="@+id/likes_count"
                layout="@layout/profile_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_default_16dp"
                android:layout_marginVertical="@dimen/margin_default_10dp"
                app:layout_constraintStart_toEndOf="@id/posts_count"
                app:layout_constraintTop_toBottomOf="@id/username" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        android:id="@+id/quotesView"
        layout="@layout/quote_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTop" />

</androidx.constraintlayout.widget.ConstraintLayout>


