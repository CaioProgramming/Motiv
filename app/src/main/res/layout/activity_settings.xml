<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsetoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimaryDark"
            app:expandedTitleGravity="center|bottom"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:title="Configurações"
            app:titleEnabled="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userpic"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:padding="30dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_fill_color="@color/transparent"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:elevation="0dp"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/topround"
        android:elevation="1dp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:animateLayoutChanges="true">

                <Button
                    android:id="@+id/changename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/usersquare"
                    android:elevation="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:text="Editar perfil"
                    android:textAlignment="textStart"
                    android:textColor="?attr/textcolor" />

                <LinearLayout
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/backname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/ic_chevron_left_black_24dp" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="@string/username"
                        android:imeActionLabel="Salvar"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:padding="15dp" />

                    <Button
                        android:id="@+id/save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@color/transparent"
                        android:elevation="0dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="Ok"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/deleteposts"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/removepostsquare"
                android:elevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:text="Remover posts"
                android:textAlignment="textStart"
                android:textColor="?attr/textcolor" />


            <Button
                android:id="@+id/deleteaccount"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/removeaccount"
                android:elevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:text="Remover conta"
                android:textAlignment="textStart"
                android:textColor="?attr/textcolor" />


            <Button
                android:id="@+id/exit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/logout"
                android:elevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:text="Sair"
                android:textAlignment="textStart"
                android:textColor="?attr/textcolor" />


        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>