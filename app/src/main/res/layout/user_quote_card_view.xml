<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userData"
            type="com.creat.motiv.model.beans.User" />
    </data>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/userShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_base_color="@color/colorAccent"
        app:shimmer_clip_to_children="true"
        app:shimmer_colored="true"
        app:shimmer_highlight_color="@color/design_default_color_primary_dark">

        <LinearLayout
            android:id="@+id/userContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fade_gradient"
            android:orientation="horizontal"
            android:paddingTop="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userpic"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:transitionName="profilepic"
                tools:src="@drawable/notfound" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:padding="5dp"
                android:text="@{userData.name}"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Caio Alves Ferreira" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>
