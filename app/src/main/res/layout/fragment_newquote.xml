<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/background"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:elevation="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/music"
                    android:text="Música"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/citation"
                    android:text="Citação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/motivation"
                    android:text="Motivação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/love"
                    android:text="Amor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/textcolor"
                android:drawableTint="@color/colorPrimary"
                android:padding="5dp"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_format_color_text_black_24dp"
                android:text="Cor do texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/backcolor"
                android:drawableTint="@color/colorPrimaryDark"
                android:padding="5dp"
                android:background="@color/transparent"
                android:drawableEnd="@drawable/ic_format_color_fill_black_24dp"
                android:text="Cor do plano de fundo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="15dp"
                android:id="@+id/frase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:hint="Escreva sua frase"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:typeface="monospace" />
            <EditText
                android:layout_marginEnd="5dp"
                android:id="@+id/author"
                android:imeActionLabel="Salvar"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:layout_gravity="end"
                android:hint="Autor"
                android:backgroundTint="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/save"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/retangle"
                android:text="@string/salvar"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</FrameLayout>