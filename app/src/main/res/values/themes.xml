<resources>


    <style name="Motiv.Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="colorAccent">@color/material_purpleA100</item>
        <item name="alertDialogStyle">@style/AppTheme.AlertDialog</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="searchViewStyle">@style/Searchtheme</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="blurOverLayColor">@color/lwhite</item>
        <item name="navblurOverLayColor">@color/nwhite</item>
        <item name="dividerColor">@color/material_grey100</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/owhite</item>
        <item name="android:statusBarColor">@color/lwhite</item>
        <item name="circularProgressIndicatorStyle">@style/CircularProgress</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="Motiv.Theme">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>