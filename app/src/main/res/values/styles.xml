<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="colorAccent">@color/deep_purple_A200</item>
        <item name="android:statusBarColor">@color/grey_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="TabsTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">

        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomOptionstext" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/nunitoblack</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="Dialog_No_Border" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:fontFamily">@font/nunitoregular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="colorAccent">@color/deep_purple_A200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
