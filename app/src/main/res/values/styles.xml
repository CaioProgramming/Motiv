<resources>

    <style name="Motiv.Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:fontFamily">@font/questrial</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="colorAccent">@color/material_purpleA100</item>
        <item name="alertDialogStyle">@style/AppTheme.AlertDialog</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="searchViewStyle">@style/Searchtheme</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="blurOverLayColor">@color/lblack</item>
        <item name="navblurOverLayColor">@color/nblack</item>
        <item name="android:navigationBarColor">@color/material_black</item>
        <item name="dividerColor">@color/material_grey800</item>
        <item name="android:statusBarColor">@color/material_black</item>
        <item name="fontFamily">@font/questrial</item>
        <item name="font">@font/questrial</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/round</item>
    </style>

    <style name="AppSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:colorBackground</item>
    </style>


    <style name="Searchtheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:panelBackground">@drawable/round</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="elevation">3dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="background">@drawable/bottom_line</item>
        <item name="paddingStart">@dimen/default_padding</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TabsTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:stateListAnimator">@animator/text_animator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="colorAccent">@color/material_purpleA100</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Bottom_Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Full_Screen_Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="CircularProgress">
        <item name="android:indeterminate">true</item>
        <item name="trackColor">?android:colorBackground</item>
        <item name="indicatorColor">@color/colorAccent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
