<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="overlaycolor">@color/lwhite</item>
           <item name="titlecolor">@color/colorPrimary</item>
        <item name="dialogbackcolor">@color/white</item>
        <item name="actionbarcolor">@color/white</item>
        <item name="textcolor">@color/black</item>
        <item name="hintcolor">@color/grey_300</item>
        <item name="android:statusBarColor">@color/grey_500</item>
        <item name="backgroundcolor">@color/grey_100</item>
         <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DF947CE9</item>
    </style>



    <style name="AppTheme.Night" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="overlaycolor">@color/lblack</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="dialogbackcolor">@color/grey_800</item>

        <item name="actionbarcolor">@color/grey_900</item>
        <item name="hintcolor">@color/grey_600</item>
         <item name="titlecolor">#BA68C8</item>
        <item name="textcolor">@color/white</item>
        <item name="backgroundcolor">@color/grey_800</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="Dialog_No_Border">
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
