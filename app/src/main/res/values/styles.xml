<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="colorAccent">@color/deep_purple_A200</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
        <item name="alertDialogStyle">@style/AppTheme.AlertDialog</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="searchViewStyle">@style/Searchtheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>

    </style>
    <style name="AppThemeUser" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="colorAccent">@color/deep_purple_A200</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
        <item name="alertDialogStyle">@style/AppTheme.AlertDialog</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="searchViewStyle">@style/Searchtheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>

    </style>

    <style name="AppSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:colorBackground</item>
    </style>


    <style name="Searchtheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/transparent</item>
    </style>

    <style name="inversebutton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?android:actionMenuTextColor</item>
        <item name="android:textColor">?android:colorBackground</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">-1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="Settingslist" parent="Widget.AppCompat.TextView">
         <item name="android:drawablePadding">5dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
          <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:foregroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:panelBackground">@drawable/round</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="AppTheme.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="BottomOptionstext" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:foregroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="bottomnavtext" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">3dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Tabstitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:capitalize">words</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="colorAccent">@color/deep_purple_A200</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <style name="Bottom_Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryDark">@color/purple_800</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
