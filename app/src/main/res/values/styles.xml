<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextView</item>
        <item name="android:editTextStyle">@style/RobotoEditText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>


    </style>

    <style name="RobotoTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:color">@drawable/text_hover</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="RobotoEditText" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Dialog_No_Border">
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>
