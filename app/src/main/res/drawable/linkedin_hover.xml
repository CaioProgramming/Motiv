<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:color="@color/blue_700">
        <shape android:shape="rectangle"><solid android:color="@color/blue_700"></solid></shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="false"
        android:color="@color/light_blue_700">
        <shape android:shape="rectangle"><solid android:color="@color/light_blue_700"></solid></shape>

    </item>
    <item android:state_enabled="false" android:color="@color/blue_700">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue_700"></solid></shape>

    </item>
    <item android:color="@color/light_blue_700">
        <shape android:shape="rectangle"><solid android:color="@color/light_blue_700"></solid></shape>

    </item>
</selector>