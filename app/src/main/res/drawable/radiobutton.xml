<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/md_purple_300" />
            <solid android:color="@color/transparent" />
            <corners android:radius="60dp" />
        </shape>
        <color android:color="@color/md_grey_600" />
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/md_purple_300" />
            <solid android:color="@color/lblack"></solid>
            <corners android:radius="60dp"></corners>

        </shape>
        <color android:color="@color/white"></color>
    </item>
</selector>