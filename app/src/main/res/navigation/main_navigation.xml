<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.creat.motiv.features.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            android:id="@+id/action_navigation_home_to_newQuoteFragment"
            app:destination="@id/navigation_new_quote" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.creat.motiv.features.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <argument
            android:name="uid"
            app:argType="string"
            app:nullable="true" />

        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            android:id="@+id/action_navigation_profile_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.creat.motiv.features.profile.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <argument
            android:name="user"
            app:argType="com.ilustris.motiv.base.beans.User" />
        <action
            android:id="@+id/action_navigation_settings_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />


    </fragment>
    <fragment
        android:id="@+id/navigation_new_quote"
        android:name="com.creat.motiv.features.newquote.NewQuoteFragment"
        tools:layout="@layout/new_quote_fragment">
        <argument
            android:name="quote"
            app:argType="com.ilustris.motiv.base.beans.quote.Quote"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.creat.motiv.features.about.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about" />


</navigation>