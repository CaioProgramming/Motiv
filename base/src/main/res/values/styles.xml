<resources>



    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/round</item>
    </style>

    <style name="AppSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:colorBackground</item>
    </style>


    <style name="Searchtheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:panelBackground">@drawable/round</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="elevation">0dp</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
    </style>


    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">@font/jost</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/radius_default_10dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="colorAccent">@color/material_purpleA100</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Bottom_Dialog_No_Border" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="colorPrimary">@color/material_purple400</item>
        <item name="android:layout_margin">@dimen/margin_default_10dp</item>
        <item name="colorPrimaryDark">@color/material_purple800</item>
        <item name="colorAccent">@color/material_purpleA100</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Full_Screen_Dialog" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.BottomCornerRadius" parent="">
        <item name="cornerSizeBottomLeft">@dimen/radius_medium_15dp</item>
        <item name="cornerSizeBottomRight">@dimen/radius_medium_15dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="ButtonPositive" parent="Widget.MaterialComponents.Button">
        <item name="strokeWidth">@dimen/default_stroke</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">?android:textColorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_default_10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/md_white</item>
    </style>

    <style name="ButtonNegative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_default_10dp</item>
        <item name="strokeWidth">@dimen/default_stroke</item>
        <item name="strokeColor">?android:textColorHint</item>
    </style>

    <style name="MotivCard">
        <item name="cardCornerRadius">@dimen/radius_small_5dp</item>
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="strokeColor">@color/selected_style</item>
        <item name="strokeWidth">@dimen/default_stroke</item>
        <item name="android:layout_margin">@dimen/margin_small_4dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/scale_down_animator</item>
        <item name="android:checkable">true</item>
    </style>
</resources>
