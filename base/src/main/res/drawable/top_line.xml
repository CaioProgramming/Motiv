<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="-3dp"
        android:left="-3dp"
        android:right="-3dp">
        <shape>
            <solid android:color="?android:navigationBarColor" />
            <stroke
                android:width="1dp"
                android:color="@color/material_grey800" />
        </shape>
    </item>

</layer-list>